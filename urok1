   Задача 8
   
       Console.Write(" Напиши 1: ");
        int n = int.Parse(Console.ReadLine());
        Console.Write("Напиши любое число: ");
        int m = int.Parse(Console.ReadLine());
        for (int i = n; i <= m; i++)
        {
            if (i % 2 == 0) 
            {
                Console.Write(i + " ");
            }
        }
